    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                //"test/dot-no-worker-test.js"
                //"test/dot-worker-test.js"
                //"test/drawEdge-test.js"
                "--timeout",
                "3600000",
                "${file}"
            ],
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Program tape",
            "program": "${workspaceFolder}/node_modules/tape/bin/tape",
            "args": [
                //"test/dot-no-worker-test.js"
                "test/simple-worker-test.js"
                //"test/drawEdge-test.js"
                //"${file}"
            ],
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}
